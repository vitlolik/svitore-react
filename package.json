{
	"name": "svitore-react",
	"description": "React binding for svitore",
	"version": "0.0.12",
	"type": "module",
	"files": [
		"dist/*"
	],
	"main": "./dist/index.umd.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"start": "vite",
		"build": "vite build && tsc -p tsconfig.build.json",
		"lint": "eslint 'src/**/*.ts' 'demo/**/*.ts'",
		"check-size": "size-limit",
		"test": "vitest --environment jsdom",
		"test:coverage": "vitest run --environment jsdom --coverage",
		"preversion": "npm run test:coverage && npm run build && npm run check-size"
	},
	"peerDependencies": {
		"react": "18",
		"svitore": "*"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^8.2.4",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@types/node": "^18.15.11",
		"@types/react": "^18.0.37",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"@vitejs/plugin-react": "^3.1.0",
		"@vitest/coverage-c8": "^0.30.1",
		"eslint": "^8.38.0",
		"eslint-plugin-react": "^7.32.2",
		"react": "^18",
		"react-dom": "^18.2.0",
		"size-limit": "^8.2.4",
		"svitore": "^0.0.18",
		"typescript": "^5.0.4",
		"vite": "^4.2.2",
		"vitest": "^0.30.1"
	},
	"size-limit": [
		{
			"path": "./dist/index.js",
			"import": "*",
			"limit": "720 B"
		}
	],
	"keywords": [
		"svitore",
		"svitore-react"
	],
	"repository": "https://github.com/vitlolik/svitore-react",
	"license": "MIT"
}
